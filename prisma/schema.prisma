generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         Int         @id @default(autoincrement())
  login      String     @db.VarChar
  password   String     @db.VarChar
  role       String     @db.VarChar
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  user_team  user_team[]
  work_time  work_time[]
  notification  notification[]
}

model user_team {
  id         Int         @id @default(autoincrement())
  user_id    Int  
  team_id    Int 
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  user       user     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "user")
  team       team     @relation(fields: [team_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "team")
}

model work_time {
  id         Int       @id @default(autoincrement())
  user_id    Int  
  task_id    Int?   
  task_name  String?     @db.VarChar
  begin_date DateTime   
  end_date   DateTime? 
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  user       user     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "user")
  task       task?     @relation(fields: [task_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "task")
}

model task {
  id         Int       @id @default(autoincrement())
  name       String     @db.VarChar
  team_id    Int 
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  team       team     @relation(fields: [team_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "team")
  work_time  work_time[]
}

model team {
  id         Int       @id @default(autoincrement())
  name       String     @db.VarChar
  admin_id   Int 
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  user_team  user_team[]
  task  task[]
}

model notification {
  id         Int       @id @default(autoincrement())
  sender_id   Int
  user_id   Int 
  status    Boolean?    @default(false)
  reason    String     @db.VarChar
  data_id    Int
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  user       user     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "user")
}